{
  "name": "sqlitenet-opfs-typescript",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:worker && npm run build:initializer",
    "build:worker": "esbuild opfs-worker.ts --bundle --format=esm --sourcemap=inline --outfile=../wwwroot/opfs-worker.js",
    "build:initializer": "esbuild opfs-initializer.ts --bundle --format=esm --sourcemap=inline --outfile=../Components/OpfsInitializer.razor.js",
    "build:release": "npm run build:worker:release && npm run build:initializer:release",
    "build:worker:release": "esbuild opfs-worker.ts --bundle --format=esm --minify --outfile=../wwwroot/opfs-worker.js",
    "build:initializer:release": "esbuild opfs-initializer.ts --bundle --format=esm --minify --outfile=../Components/OpfsInitializer.razor.js"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "typescript": "^5.8.3"
  }
}